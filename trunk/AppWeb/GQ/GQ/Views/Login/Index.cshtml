@using GQService.com.gq.extensions;
@using Microsoft.AspNetCore.Mvc.Localization
@inject IHtmlLocalizer<Idioma> Localizer
@{
    ViewData["Title"] = Localizer["login_index_title"];
    Layout = "";
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="SHORTCUT ICON" type="image/x-icon" href="~/images/logo-geminus-chico0.png" />

    <environment names="Development">
        <link rel="stylesheet" href="~/lib/bootstrap/css/bootstrap.css" />
        <link rel="stylesheet" href="~/lib/font-awesome/css/font-awesome.css" />
        <link rel="stylesheet" href="~/lib/ionicons/css/ionicons.css" />
        <link rel="stylesheet" href="~/lib/adminlte/plugins/iCheck/all.css">
        <link rel="stylesheet" href="~/lib/adminlte/css/AdminLTE.css" />
        <link rel="stylesheet" href="~/lib/adminlte/css/skins/_all-skins.css" />
        <link rel="stylesheet" href="~/lib/ng-table/ng-table.css" />
        <link rel="stylesheet" href="~/lib/ui-select/select.css" />
        <link rel="stylesheet" href="~/lib/nvd3/nv.d3.min.css" />
        <link rel="stylesheet" href="~/css/site.css" />
    </environment>

    <environment names="Staging,Production">
        <link rel="stylesheet" href="~/lib/bootstrap/css/bootstrap.css" />
        <link rel="stylesheet" href="~/lib/font-awesome/css/font-awesome.css" />
        <link rel="stylesheet" href="~/lib/ionicons/css/ionicons.css" />
        <link rel="stylesheet" href="~/lib/adminlte/plugins/iCheck/all.css">
        <link rel="stylesheet" href="~/lib/adminlte/css/AdminLTE.css" />
        <link rel="stylesheet" href="~/lib/adminlte/css/skins/_all-skins.css" />
        <link rel="stylesheet" href="~/lib/ng-table/ng-table.css" />
        <link rel="stylesheet" href="~/lib/ui-select/select.css" />
        <link rel="stylesheet" href="~/lib/nvd3/nv.d3.min.css" />
        <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    </environment>

    <script type="text/javascript">
        var config = {
            baseURL: '@Url.AbsoluteContent("~/")'
        };

        var lenguaje = {

            //Default Message
            default_title_guardar: '@Localizer["default_title_guardar"]',
            default_mensaje_guardar: '@Localizer["default_mensaje_guardar"]',
            default_title_borrar: '@Localizer["default_title_borrar"]',
            default_mensaje_borrar: '@Localizer["default_mensaje_borrar"]',
            default_title_error: '@Localizer["default_title_error"]',
            default_mensaje_error: '@Localizer["default_mensaje_error"]',
            default_title_agregar: '@Localizer["default_title_agregar"]',
            default_title_editar: '@Localizer["default_title_editar"]',

            //Estado
            default_estado_a: '@Localizer["default_estado_a"]',
            default_estado_d: '@Localizer["default_estado_d"]',
            default_estado_b: '@Localizer["default_estado_b"]',

            

        };

    </script>
</head>

<body class="hold-transition login-page hidden" ng-app="AngularJSApp" 
      style="background-image: url(@Url.AbsoluteContent("~/")/images/loginBackground.jpg); background-repeat: no-repeat;background-size: cover;background-position: center top;background-attachment: fixed;">

    <div class="login-box" ng-controller="appController">       
        <!-- /.login-logo -->        
        @*<img src="~/images/canada_0.jpg" />*@
        <div class="login-box-body" style="opacity: 0.9;">
            <div class="login-logo">
                <b>GQ</b>
            </div>
            <p class="login-box-msg"> @Localizer["login_index_header"]</p>
            <form>
                <div class="form-group has-feedback">
                    <input type="text" ng-model="data.UsuarioNombre" class="form-control" placeholder="@Localizer["login_index_email"]" ng-enter="onLogin()">
                    <span class="glyphicon glyphicon-envelope form-control-feedback"></span>
                </div>
                <div class="form-group has-feedback">
                    <input type="password" ng-model="data.UsuarioClave" class="form-control" placeholder="@Localizer["login_index_password"]" ng-enter="onLogin()">
                    <span class="glyphicon glyphicon-lock form-control-feedback"></span>
                </div>
                <div class="form-group" ng-show="data.ErrorShow">
                    <div class="col-sm-12">
                        <div class="callout callout-danger">
                            <h4><i class="fa fa-ban"></i> Error</h4>
                            <p>
                                @Localizer["login_index_error"]
                            </p>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-xs-8">
                        <div class="checkbox">
                            <label>
                                <input type="checkbox"> @Localizer["login_index_rememberme"]
                            </label>
                        </div>
                    </div>
                    <!-- /.col -->
                    <div class="col-xs-4">
                        <button type="button" class="btn btn-primary btn-block btn-flat" ng-click="onLogin()">@Localizer["login_index_entrar"]</button>
                    </div>
                    <!-- /.col -->
                </div>
                <div>
                    <a href="#" ng-click="onRecuperarClave()">@Localizer["login_index_recuperar_clave"]</a>
                </div>
            </form>
        </div>
        <!-- /.login-box-body -->
    </div>
    <!-- /.login-box -->
    <environment names="Development">
        <script src="~/lib/jquery/jquery-3.2.1.js"></script>
        <script src="~/lib/bootstrap/js/bootstrap.js"></script>
        <script src="~/lib/adminlte/plugins/fastclick/fastclick.js"></script>
        <script src="~/lib/adminlte/plugins/iCheck/icheck.min.js"></script>
        <script src="~/lib/adminlte/plugins/slimScroll/jquery.slimscroll.js"></script>
        <script src="~/lib/adminlte/js/app.js"></script>
        <script src="~/lib/angular/angular.js"></script>
        <script src="~/lib/angular/angular-sanitize.js"></script>
        <script src="~/lib/angular/angular-animate.js"></script>
        <script src="~/lib/angular/angular-route.js"></script>
        <script src="~/lib/ace/ace.js"></script>
        <script src="~/lib/ui-select/select.js"></script>
        <script src="~/lib/ui-bootstrap/ui-bootstrap-tpls-2.5.0.js"></script>
        <script src="~/lib/ng-table/ng-table.js"></script>
        <script src="~/lib/nvd3/nv.d3.min.js"></script>
        <script src="~/lib/nvd3/angular-nvd3.min.js"></script>
        <script src="~/lib/moment/moment.min.js"></script>
        <script src="~/lib/ace/ace.js"></script>
        <script src="~/lib/ace/ui-ace.js"></script>
        <script src="~/js/controller/controller.js"></script>
        <script src="~/js/site.js"></script>
        <script src="~/js/controller/login/loginController.js"></script>
        <script src="~/lib/ng-map/ng-map.min.js"></script>
    </environment>
    <environment names="Staging,Production">
        <script src="~/lib/jquery/jquery-3.2.1.js"></script>
        <script src="~/lib/bootstrap/js/bootstrap.js"></script>
        <script src="~/lib/adminlte/plugins/fastclick/fastclick.js"></script>
        <script src="~/lib/adminlte/plugins/iCheck/icheck.min.js"></script>
        <script src="~/lib/adminlte/plugins/slimScroll/jquery.slimscroll.js"></script>
        <script src="~/lib/adminlte/js/app.js"></script>
        <script src="~/lib/angular/angular.js"></script>
        <script src="~/lib/angular/angular-sanitize.js"></script>
        <script src="~/lib/angular/angular-animate.js"></script>
        <script src="~/lib/angular/angular-route.js"></script>
        <script src="~/lib/ace/ace.js"></script>
        <script src="~/lib/ui-select/select.js"></script>
        <script src="~/lib/ui-bootstrap/ui-bootstrap-tpls-2.5.0.js"></script>
        <script src="~/lib/ng-table/ng-table.js"></script>
        <script src="~/lib/nvd3/nv.d3.min.js"></script>
        <script src="~/lib/nvd3/angular-nvd3.min.js"></script>
        <script src="~/lib/moment/moment.min.js"></script>
        <script src="~/lib/ace/ace.js"></script>
        <script src="~/lib/ace/ui-ace.js"></script>
        <script src="~/js/controller/controller.js"></script>
        <script src="~/js/site.js" asp-append-version="true"></script>
        <script src="~/js/controller/login/loginController.js"></script>
        <script src="~/lib/ng-map/ng-map.min.js"></script>
    </environment>
    @Html.Partial("~/Views/Shared/_PartialModalDialog.cshtml")

<script type="text/ng-template" id="modalRecuperarClave.html">
        <div class="modal-header">
            <h3 class="modal-title">
                <p class="login-box-msg"> @Localizer["login_index_recuperar_tu_clave"] </p>
            </h3>
        </div>
        <div class="modal-body">
            <form>
            <div class="form-group has-feedback">
                <input type="text" ng-model="data.extraData.UsuarioEmail" class="form-control" placeholder="@Localizer["login_index_email"]" ng-enter="onRecuperarClave()">
                <span class="glyphicon glyphicon-envelope form-control-feedback"></span>
            </div>    
        </form>
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-primary btn-block btn-flat" ng-click="onOk()">@Localizer["login_index_enviar"]</button>
        </div>
    </script>
</body>
</html>
